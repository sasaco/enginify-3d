{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "outDir": "types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "node_modules/@jscad/**/*.js",
    "node_modules/@jscad/**/*.ts"
  ],
  "exclude": [
    "node_modules/@jscad/**/node_modules",
    "node_modules/@jscad/**/*.test.js",
    "node_modules/@jscad/**/*.spec.js"
  ]
}
